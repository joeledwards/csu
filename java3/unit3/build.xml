<project name="validator" default="test" basedir=".">
    <description>
        Validates an XML document against an XML Schema via Validator, DOM parser, and SAX parser.
    </description>
    <property name="src" location="src"/>
    <property name="build" location="build"/>
    <property name="libs" location="libs"/>
    <property name="jar" location="validator.jar"/>
    <property name="main_class" value="Main"/>

    <path id="compile.class.path">
        <pathelement location="${src}"/>
        <fileset dir="${libs}">
            <include name="**/*.jar"/>
        </fileset>
    </path>

    <path id="jar.class.path">
        <fileset dir="${libs}">
            <include name="**/*.jar"/>
        </fileset>
    </path>

    <path id="test.class.path">
        <pathelement location="${build}" />
        <fileset dir="${libs}">
            <include name="**/*.jar" />
        </fileset>
    </path>

<!--INIT-->
    <target name="init">
        <tstamp/>
        <mkdir dir="${build}"/>
    </target>

<!--COMPILE-->
    <target name="compile" depends="init" description="Compile the source">
        <javac srcdir="${src}" destdir="${build}" debug="on" includeantruntime="no" >
            <classpath refid="compile.class.path"/>
        </javac>
    </target>

<!--LIBRARIES-->
    <target name="libraries" depends="init" description="Add librares">
        <unjar dest="${build}">
            <fileset dir="${libs}">
                <include name="**/*.jar"/>
            </fileset>
        </unjar>
        <delete dir="${build}/META-INF"/>
    </target>

<!--TEST-->
    <target name="test" depends="compile" description="compile and test" >
        <java classname="${main_class}" classpathref="test.class.path" fork="true" />
    </target>

<!--PACKAGE-->
    <target name="package" depends="libraries, compile" description="generate the distribution" >
        <jar jarfile="${jar}" basedir="${build}">
            <manifest>
                <attribute name="Main-Class" value="${main_class}"/>
            </manifest>
        </jar>
    </target>

<!--CLEAN-->
    <target name="clean" description="clean up" >
        <delete dir="${build}"/>
        <delete file="${jar}"/>
    </target>
</project>
